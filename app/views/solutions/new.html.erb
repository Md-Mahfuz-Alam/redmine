<div class="container mt-5">
  <h1 class="text-center mb-4">New Solution</h1>

  <%= form_with(model: @solution, local: true, class: "mb-4") do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "font-weight-bold" %>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :fault_id, class: "font-weight-bold" %>
      <%= form.collection_select :fault_id, Fault.all, :id, :name, { prompt: 'Select Fault' }, class: "form-control" %>
    </div>

    <div class="text-center">
      <%= form.submit "Create Solution", class: "btn btn-custom" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= link_to "Back", stations_path, class: "btn " %>
  </div>
</div>
