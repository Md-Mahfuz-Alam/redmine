<div class="container mt-5">
  <h3 class="text-center mb-4">Add New Station</h3>

  <%= form_with(model: @station, local: true, class: "mb-4") do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "font-weight-bold" %>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="text-center">
      <%= form.submit "Create Station", class: "btn" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "Back", stations_path, class: "btn " %>
  </div>
</div>
