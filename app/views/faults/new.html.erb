<div class="container mt-5">
  <h1 class="text-center mb-4">Add New Fault</h1>

  <%= form_with(model: @fault, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "font-weight-bold" %>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :station_id, class: "font-weight-bold" %>
      <%= form.select :station_id, Station.all.collect { |s| [s.name, s.id] }, { prompt: 'Select Station' }, { class: "form-control" } %>
    </div>

    <div class="form-group text-center">
      <%= form.submit "Create Fault", class: "btn btn-custom" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "Back", stations_path, class: "btn " %>
  </div>
</div>
